<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- Style for text description -->
    <style name="TextDescriptionStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Style for a horizontal linear layout -->
    <style name="LinearLayoutHorizontalStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for a horizontal linear layout -->
    <style name="LinearLayoutVerticalStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for music control image views -->
    <style name="MusicControlStyle">
        <item name="android:src">@drawable/ic_play_circle_outline_black_48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <!-- <item name="android:onClick">playbackControl</item>-->
    </style>

    <!-- Style for song image views -->
    <style name="SongImageStyle">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Style for a music category -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/category_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/color_category</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- Style for a song title -->
    <style name="SongTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for an artist of a specific song -->
    <style name="SongArtistStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style for an artist of a specific song -->
    <style name="SongTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
